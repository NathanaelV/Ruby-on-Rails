<h2>Editando uma tarefa</h2>
<%= form_for @task do |f| %>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>
    <%= f.label :status, 'Status' %>
    <%= f.check_box :status %>
    <%= f.submit 'Editar' %>
<% end %>

<p>Retornar a <%= link_to 'Task List', root_path %></p>