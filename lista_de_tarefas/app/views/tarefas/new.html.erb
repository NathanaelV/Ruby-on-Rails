<h1>Criando uma nova tarefa</h1>

<%= form_for Tarefa.new do |f| %>
  <%= f.label :description, 'Descrição:' %>
  <%= f.text_field :description %>
  <%= f.label :status, 'Status:' %>
  <%= f.check_box :status %>
  <%= f.submit 'Criar' %>
<% end %>

<p><%= link_to 'Retornar ao Menu', root_path %></p>

